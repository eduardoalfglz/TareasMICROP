21c0 f6 10 12                           ldab TICK_VEL            ;Se revisa que tick_Vel sea diferente de cero         
21c3 27 35                              beq returnPH
21c5 1d 10 00 08                        bclr BANDERAS,$08      
21c9 c1 1a                              cmpb #26                ;26 es el numero minimo de ticks si es menor el resultado de la velocidad es mayor a 255 y se desborda           
21cb 24 07                              bhs validSpeed`         ;Comparacion sin signo
21cd 18 0b ff 10 11                     movb #$FF,VELOC
21d2 20 10                              bra SetTicks`
21d4 86 00              validSpeed`     ldaa #0                 ;Se carga en D TICK_VEL, ya que en X no se puede porque es un byte
21d6 ce 66 ff                           ldx #26367               
21d9 b7 c5                              xgdx                 ;Se intercambian para la division
21db 18 10                              idiv
21dd b7 54                              tfr X,D                 ;Se vuelven a intercambiar para guardar el resultado en veloc que es un byte
21df 49                                 lsrd
21e0 49                                 lsrd
21e1 7b 10 11                           stab VELOC              ;Se procede a calcular los ticks para las banderas
21e4 f6 10 12           SetTicks`       ldab TICK_VEL           ;Se multiplica tick_vel por 5 para obtener la cantidad de ticks para 200 m
21e7 86 05                              ldaa #5
21e9 12                                 mul
21ea 79 10 12                           clr TICK_VEL
21ed 7c 10 0f                           std TICK_DIS
21f0 49                                 lsrd
21f1 7c 10 0d                           std TICK_EN             ;Se divide entre 2 para obtener la cantidad de ticks para 100 m                                                        
21f4 20 04                              bra returnPH
                        
